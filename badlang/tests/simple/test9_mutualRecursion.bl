/*
Test having two mutually recursive functions.
*/

fun bool isEven(int n) {
    if (n == 0) return true;
    return isOdd(n - 1);
}

fun bool isOdd(int n) {
    if (n == 0) return false;
    return isEven(n - 1);
}

fun int main() {
    print isEven(10000);   // 1
    print isOdd(10);       // 0
    print isEven(7);       // 0
    print isOdd(7);        // 1
    return 0;
}
